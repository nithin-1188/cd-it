Transposition Cipher â€“ Rail Fence Cipher


#include <stdio.h>
#include <string.h>

void encryptRailFence(char *text, int key) {
    int len = strlen(text);
    char rail[key][len];
    
    // Fill with '\n'
    for (int i = 0; i < key; i++)
        for (int j = 0; j < len; j++)
            rail[i][j] = '\n';
    
    int dir_down = 0, row = 0, col = 0;
    
    for (int i = 0; i < len; i++) {
        if (row == 0 || row == key - 1)
            dir_down = !dir_down;
        
        rail[row][col++] = text[i];
        
        row += dir_down ? 1 : -1;
    }
    
    // Print cipher text
    printf("Ciphertext: ");
    for (int i = 0; i < key; i++)
        for (int j = 0; j < len; j++)
            if (rail[i][j] != '\n')
                printf("%c", rail[i][j]);
    
    printf("\n");
}

int main() {
    char text[] = "HELLOWORLD";
    int key = 3;
    encryptRailFence(text, key);
    return 0;
}
